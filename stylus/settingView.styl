
#settingButton
	bottom 20px
	left 20px



settingAreaWidth = 250px
settingMargin = settingAreaWidth / 10
settingBgColor = rgba(51, 177, 255, .8)
settingDivBg = rgba(0, 0, 0, .075)
fontColor = rgba(255, 255, 255, .8)

#settingArea
	position fixed
	z-index 200
	top 0px
	left (settingAreaWidth + settingMargin * 2) * -1
	transition-property left
	transition-duration 0.3s
	&.show
		left 0px

	background-color settingBgColor
	color fontColor

	height 100%
	width settingAreaWidth

	// iphone5
	@media only screen and (min-device-width:320px) and (max-device-width:568px) {
    	transform: scale(0.7);
	}

	padding settingMargin
	>h2
		font-size 18px
		margin 30px 5px
		margin-top 10px
	>div
		padding 15px
		margin 15px 0px

		background-color settingDivBg

		h3
			color rgba(255, 255, 255, .85)
			font-size 16px
			margin 5px
			

	#websocket_setting
		p
			margin 30px
			margin-top 20px
			margin-bottom 20px
			text-align: center

			input
				margin 0
				font-size 14px
				outline none
				width 100%
				color white
				background-color rgba(0,0,0, 0)
				border-style none
				border-bottom 2px rgba(255,255,255, .5) solid
			a
				padding 10px
				font-size 14px
				text-decoration none

				color rgba(255, 255, 255, .85)

				transition-property background-color, color
				transition-duration 0.3s
				background-color rgba(255,255,255, .2)
				&:hover
					opacity 0.9
					background-color rgba(0,0,0, 0.1)
				&:active
					opacity 0.7
					background-color rgba(255,255,255, 0.9)
					color rgba(0,0,0, 0.9)

	#directionSetting
		div
			margin 15px
			h4
				margin 5px


	#credits
		background-color rgba(0, 0, 0, .0)
		font-size 8px
		line-height 1.5


